---
import Thanks from "../../components/Thanks.astro";
export const prerender = true;

import Layout from "layouts/Layout.astro";
import Socials from "components/Socials.astro";

import CenteredBody from "components/CenteredBody.astro";

import { loadStrings, getStaticPaths } from "locales";
import Trans from "locales/Trans.astro";

export { getStaticPaths };

const t = await loadStrings(Astro.params.lang, true);
---

<Layout title={t("home.title")} description={t("home.description")}>
    <CenteredBody>
        <section>
            <h1>
                <Trans i18nKey="home.hello">
                    Hi, I'm <span>LoosaZ!</span>
                </Trans>
            </h1>
            <p>
                {t("home.about")}
                <br />
                {t("home.about2")}
            </p>
        </section>

        <section id="socials">
            <h2>{t("home.socialsTitle")}</h2>
            <Socials class="socials" />
        </section>
        <section>
            <h2>{t("home.thanks")}</h2>
        </section>
        <Thanks class="socials" />
    </CenteredBody>
</Layout>

<style lang="scss">
    section {
        // make this smaller to fit more stuff on the page later
        margin-bottom: 2.5em;
    }

    span {
        color: var(--accent);
    }

    h2 {
        font-size: unset;
    }

    a:not(:hover, :focus) {
        text-decoration: none;
    }

    #frens {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    // trolley
    @media screen and (max-width: 1506px) {
        #frens {
            justify-content: center;
        }
    }
</style>
